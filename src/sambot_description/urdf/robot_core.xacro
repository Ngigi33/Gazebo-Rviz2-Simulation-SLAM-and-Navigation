<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <mass value="${mass}"/>
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
        </inertial>
    </xacro:macro>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

   

    <!-- BASE_FOOTPRINT -->
    <link name="base_footprint">

    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0"/>
    </joint>
    
    <!-- BASE_LINK  -->
    <link name="base_link">

    </link>

    <joint name="base_link_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>


    <!-- CHASSIS LINK -->

    <!-- <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint> -->

    <link name="chassis">
        <xacro:default_inertial mass="1.0"/>
        <visual>
            <origin xyz="0.2 0 0.175" rpy="1.57 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/simple_chassis.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/simple_chassis.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <origin xyz="-0.197 -0.035 0.04" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <xacro:default_inertial mass="10.0"/>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/active_wheel_placeholder.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/active_wheel_placeholder.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <origin xyz="-0.197 -0.263 0.04" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <xacro:default_inertial mass="10.0"/>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/active_wheel_placeholder.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/active_wheel_placeholder.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <!-- CASTER WHEELs LINK -->

    <joint name="caster_wheel_joint_left" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_left"/>
        <origin xyz="0.0122 -0.07025 0" rpy="${pi/2} 0 0"/>
    </joint>


    <link name="caster_wheel_left">
        <xacro:default_inertial mass="5.0"/>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/free_wheel_placeholder.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/free_wheel_placeholder.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <joint name="caster_wheel_joint_right" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_right"/>
        <origin xyz="0.0122 -0.2265 0" rpy="${pi/2} 0 0"/>
    </joint>


    <link name="caster_wheel_right">
        <xacro:default_inertial mass="5.0"/>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/free_wheel_placeholder.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://sambot_description/meshes/free_wheel_placeholder.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

</robot>